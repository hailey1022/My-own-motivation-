{
  "quotes": [
    { "text": "상처는 빛이 들어오는 곳이다.", "author": "루미", "tags": ["슬픔", "치유", "내면"] },
    { "text": "포기하지 마라. 지금 힘든 순간이 내일의 힘이 된다.", "author": "이순신(의지에 기반한 재구성)", "tags": ["용기", "희망", "도전"] },
    { "text": "작은 발걸음이 큰 길을 만든다.", "author": "익명", "tags": ["성장", "인내", "꾸준함"] },
    { "text": "사랑은 설명할 수 없고, 느낄 수밖에 없다.", "author": "정호승(감성에 기반한 재구성)", "tags": ["사랑", "연결"] },
    { "text": "오늘을 충실히 사는 것이 내일을 여는 문이다.", "author": "김수환 추기경(의역)", "tags": ["현재", "성찰", "희망"] },
    { "text": "고요함 속에서 마음은 스스로 치유된다.", "author": "틱낫한(의역)", "tags": ["평온", "명상", "치유"] },
    { "text": "넘어졌다면, 그 자리에 머물지 말자.", "author": "나태주(의역)", "tags": ["회복", "용기"] },
    { "text": "감사함은 모든 것을 충분하게 만든다.", "author": "멜로디 비티(의역)", "tags": ["감사", "충만"] },
    { "text": "두려움은 문 앞에서만 크다.", "author": "익명", "tags": ["용기", "불안", "도전"] },
    { "text": "비가 온 뒤에 무지개가 뜬다.", "author": "익명", "tags": ["희망", "회복"] },
    { "text": "마음이 머무는 곳에 길이 생긴다.", "author": "법정 스님(의역)", "tags": ["평온", "성찰"] },
    { "text": "오늘의 한 걸음이 내일의 나를 만든다.", "author": "익명", "tags": ["성장", "꾸준함"] },
    { "text": "사랑은 나눌수록 커진다.", "author": "익명", "tags": ["사랑", "연결"] },
    { "text": "바다는 모든 강물을 포용한다.", "author": "장자(의역)", "tags": ["평온", "넓음", "바다"] },
    { "text": "어두움이 깊을수록 별은 더 빛난다.", "author": "도스토옙스키(의역)", "tags": ["희망", "어둠", "빛"] },

    { "text": "분노는 불꽃처럼 타오르나, 지혜는 바람처럼 식힌다.", "author": "익명", "tags": ["분노", "지혜"] },
    { "text": "그리움이 깊을수록 사랑은 맑아진다.", "author": "익명", "tags": ["사랑", "그리움"] },
    { "text": "감사는 가진 것을 충분하게 만든다.", "author": "익명", "tags": ["감사", "충만"] },
    { "text": "불안은 대비를 부르고, 대비는 용기를 낳는다.", "author": "익명", "tags": ["불안", "용기"] },
    { "text": "창의성은 익숙함과 낯섦의 다리 위에서 태어난다.", "author": "익명", "tags": ["창의", "영감"] },
    { "text": "오늘의 사소한 승리가 내일의 큰 도약이 된다.", "author": "익명", "tags": ["성장", "꾸준함"] },
    { "text": "고요 속에서 마음의 소리가 또렷해진다.", "author": "익명", "tags": ["평온", "성찰"] },
    { "text": "끝처럼 느껴지는 순간이 시작을 데려온다.", "author": "익명", "tags": ["희망", "전환"] },
    { "text": "나를 믿는 순간, 길은 조금 더 가까워진다.", "author": "익명", "tags": ["자신감", "도전"] },
    { "text": "사랑은 나와 세상을 동시에 밝힌다.", "author": "익명", "tags": ["사랑", "빛"] },
    { "text": "느리게 가도 괜찮다. 멈추지만 않으면 된다.", "author": "나태주(의역)", "tags": ["성장", "인내", "꾸준함"] },
    { "text": "흔들리는 시간은 뿌리를 깊게 한다.", "author": "익명", "tags": ["성장", "회복"] },
    { "text": "어제의 상처가 오늘의 나를 빚는다.", "author": "익명", "tags": ["치유", "성장"] },
    { "text": "희망은 보이지 않는 것을 보게 한다.", "author": "익명", "tags": ["희망", "신뢰"] },
    { "text": "분노를 이기는 가장 큰 힘은 이해다.", "author": "익명", "tags": ["분노", "이해"] },
    { "text": "감사가 쌓이면 평화가 된다.", "author": "익명", "tags": ["감사", "평온"] }
  ]
}

